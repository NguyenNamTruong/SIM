<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SIMS_Demo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SIMS_Demo.styles.css" asp-append-version="true" />
    <style>
        /* Custom CSS for sidebar */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            width: 200px; /* Width of the sidebar */
            background-color: #f8f9fa;
            border-right: 1px solid #dee2e6;
            overflow-y: auto; /* Allow vertical scrolling */
        }

        .sidebar-heading {
            padding: 0.875rem 1.25rem;
            font-size: 1.2rem;
            font-weight: bold;
        }

        .list-group-item {
            background-color: transparent;
            border: none;
            border-radius: 0;
            font-size: 1rem;
        }

            .list-group-item:hover {
                background-color: #e9ecef;
            }

        /* Custom CSS for navbar */
        .navbar {
            position: fixed;
            top: 0;
            left: 200px; /* Width of the sidebar */
            right: 0;
            z-index: 1030; /* Ensure navbar stays above other content */
            width: calc(100% - 200px); /* Width of navbar is 100% - width of sidebar */
            display: flex;
            justify-content: space-between; /* To move items to left and right */
            padding: 0 15px; /* Add padding to maintain spacing */
        }

        /* Adjust main content to account for fixed sidebar and navbar */
        .container {
            margin-top: 56px; /* Height of the navbar */
            margin-left: 200px; /* Width of the sidebar */
            padding-top: 1rem; /* Add some spacing */
        }

        /* Ensure footer is at the bottom */
        .footer {
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        /* Custom CSS for avatar */
        .avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: #6c757d;
            margin-left: auto; /* Move avatar to the right */
            margin-right: 15px; /* Add margin-right */
            cursor: pointer; /* Change cursor to pointer on hover */
        }

        /* Custom CSS for dropdown menu */
        .dropdown-menu {
            right: 0;
            left: auto;
        }

        /* Custom CSS for dropdown toggle */
        .dropdown-toggle::after {
            display: none; /* Hide default dropdown indicator */
            content: none; /* Hide default content */
        }

        /* Custom CSS for dropdown toggle when dropdown is open */
        .dropdown-toggle[aria-expanded="true"]::after {
            display: inline-block; /* Display the arrow */
            margin-left: 0.255em; /* Adjust arrow position */
            vertical-align: 0.255em; /* Align arrow vertically */
            content: ""; /* Arrow icon */
            border-top: 0.3em solid; /* Top side of the arrow */
            border-right: 0.3em solid transparent; /* Right side of the arrow */
            border-bottom: 0; /* Bottom side of the arrow */
            border-left: 0.3em solid transparent; /* Left side of the arrow */
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="sidebar-heading">Menu</div>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-controller="Course">Course</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-controller="Timetable">Timetable</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Option 3</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Option 4</a>
            </li>
        </ul>
    </div>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">SIMS_Demo</a>
        <div class="dropdown">
            <div class="avatar dropdown-toggle" id="avatarDropdownMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></div>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="avatarDropdownMenu">
                <a class="dropdown-item" href="#">Profile</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="#">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container">
            &copy; 2024 - SIMS_Demo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        $(document).ready(function () {
            $('.avatar').click(function () {
                $('.dropdown-menu').toggle();
            });
        });
    </script>
</body>
</html>
